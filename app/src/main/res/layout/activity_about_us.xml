<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".AboutUs">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="50dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/androidProfile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_android_photo"
        app:civ_border_width="2dp"
        android:visibility="gone"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/TextSocialMedia"
        android:fontFamily="@font/cairo_regular"
        android:textSize="25sp"
        android:text="Social Media Contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/layoutAnim"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">


        <ImageView
            android:id="@+id/facebookImg"
            android:src="@drawable/ic_facebook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/gitImg"
            android:src="@drawable/ic_github"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/vkImg"
            android:src="@drawable/ic_vk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>


    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/infoDev"
        android:fontFamily="@font/cairo_regular"
        android:textSize="15sp"
        android:text="Developed by: Ismael Tristan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>


</LinearLayout>